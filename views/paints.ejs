                itemElement.className = 'cart-item';
                itemElement.innerHTML = `
            <img src="/assets/${cartItem.item.toLowerCase().replace(/ /g, '-')}.jpg" alt="${cartItem.item}">
            <span>${cartItem.item}</span>
            <span>Price: ₹${cartItem.price}</span>
            <input type="number" value="${cartItem.quantity}" min="1" class="quantity-input" data-item="${cartItem.item}">
            <button class="remove-btn" data-item="${cartItem.item}">Remove</button>
            <span>Total: ₹${itemTotal}</span>
        `;
                cartItemsContainer.appendChild(itemElement);
            });

            const totalElement = document.createElement('div');
            totalElement.className = 'total';
            totalElement.innerHTML = `Total: ₹${total}`;
            cartItemsContainer.appendChild(totalElement);
        }

        document.querySelectorAll('.add-to-cart-btn').forEach(button => {
            button.addEventListener('click', () => {
                const item = button.getAttribute('data-item');
                const price = parseInt(button.getAttribute('data-price'));
                addToCart(item, price);
            });
        });

        document.addEventListener('click', event => {
            if (event.target.classList.contains('remove-btn')) {
                const item = event.target.getAttribute('data-item');
                removeFromCart(item);
                renderCheckoutPage();
            }
        });

        document.addEventListener('change', event => {
            if (event.target.classList.contains('quantity-input')) {
                const item = event.target.getAttribute('data-item');
                const quantity = parseInt(event.target.value);
                updateQuantity(item, quantity);
                renderCheckoutPage();
            }
        });

        // Call this function on page load for the checkout page
        if (window.location.pathname.includes('/checkout')) {
            renderCheckoutPage();
        }

        // Initialize the cart count on page load
        updateCartCount();

    </script>

