    <style>
        body {
            font-family: fangsong, sans-serif;
            margin: 0;
            padding: 0;
        }

        .header {
            padding: 10px 10px;
            display: flex;
            align-items: center;
            justify-content: space-between;
            position: relative;
        }

        .logo {
            height: 100px;
            width: 100px;
            vertical-align: middle;
            border-radius: 50%;
        }

        nav {
            display: flex;
            align-items: center;
            background-color: #ffffff;
            padding: 10px 20px;
            border-radius: 5px;
        }

        .nav-link {
            color: black;
            text-decoration: none;
            margin: 0 15px;
            font-size: 20px;
            padding: 8px 15px;
            transition: background-color 0.3s, color 0.3s;
            border-radius: 3px;
        }

        .nav-link:hover {
            background-color: #ff6f61;
            color: #fff;
        }

        .category-detail-section {
            padding: 20px;
            max-width: 1200px;
            margin: 0 auto;
            position: relative;
            /* Position relative to enable absolute positioning of filter options */
        }

        .category-detail-section::before {
            content: "";
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background-image: url('/assets/paints.jpg');
            background-size: cover;
            background-position: center;
            opacity: 0.2;
            z-index: -1;
        }

        .category-detail-section>* {
            position: relative;
            z-index: 1;
        }

        /* Filter Dropdown Styles */

        .filter-options {
            position: absolute;
            /* Position absolutely to overlap the card container */
            top: 20px;
            /* Adjust top position as needed */
            right: 20px;
            /* Align to the right of the container */
            width: auto;
            /* Adjust width to fit the content */
            padding: 10px;
            z-index: 2;
            /* Ensure it is above the card container */
        }

        .filter-dropdown {
            position: relative;
            display: inline-block;
            /* Remove width property to fit content */
        }

        .filter-btn-main {
            padding: 6px 30px;
            /* Smaller padding for a smaller button */
            background-color: #ff6f61;
            color: #fff;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            transition: background-color 0.3s;
            /* Removed transform */
            font-size: 14px;
            /* Smaller font size for a smaller button */
            text-align: center;
        }

        .filter-btn-main:hover {
            background-color: #e55b4e;
            /* Removed transform to stop zooming effect */
        }

        .filter-list {
            display: none;
            position: absolute;
            background-color: #ffffff;
            box-shadow: 0 8px 16px rgba(0, 0, 0, 0.2);
            z-index: 1;
            border-radius: 5px;
            margin-top: 5px;
            padding: 10px;
            width: 100%;
            /* Adjust the width as needed */
        }

        .filter-dropdown:hover .filter-list,
        .filter-list:hover {
            display: block;
        }

        .filter-list .filter-btn {
            display: block;
            width: 100%;
            text-align: left;
            padding: 10px;
            background-color: white;
            color: black;
            border: none;
            border-bottom: 1px solid #ddd;
            cursor: pointer;
            transition: background-color 0.3s;
        }

        .filter-list .filter-btn:last-child {
            border-bottom: none;
        }

        .filter-list .filter-btn:hover {
            background-color: #f1f1f1;
        }

        .card-container {
            display: grid;
            grid-template-columns: repeat(auto-fill, minmax(220px, 1fr));
            gap: 20px;
            padding: 20px;
            margin-top: 100px;
            /* Adjust to ensure it's not covered by filter options */
        }


        .card {
            background-color: white;
            border-radius: 8px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
            overflow: hidden;
            text-align: center;
            transition: transform 0.3s, box-shadow 0.3s;
        }

        .card img {
            width: 100%;
            height: auto;
            max-height: 150px;
            object-fit: contain;
            transition: transform 0.3s;
        }

        .card span {
            display: block;
            margin: 10px 0;
